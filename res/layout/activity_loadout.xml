<RelativeLayout 
    android:id="@+id/fullscreen_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.pieuw.avalanche.Loadout" >

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_below="@+id/anchor_1">

	    <Button
	        android:id="@+id/lava_immunity"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_width="0dp"/>
	    
	   	<Button
	   	    android:id="@+id/block_immunity"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="1"
	   	    android:layout_width="0dp"/>
		
	   	<Button
	   	    android:id="@+id/double_jump"
	   	    android:layout_height="wrap_content"
	   	    android:layout_weight="1"
	   	    android:layout_width="0dp"/>
		
		<Button
	        android:id="@+id/icarus_boots"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:layout_width="0dp"/>
	</LinearLayout>
	
	<Button
	    android:id="@+id/passive_1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/anchor_1"
	    android:layout_toLeftOf="@+id/anchor_1"/>
	
	<Button
	    android:id="@+id/passive_2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_above="@+id/anchor_1"
	    android:layout_toRightOf="@+id/anchor_1"/>
	
	<TextView
	    android:id="@+id/anchor_1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerVertical="true"
	    android:layout_centerHorizontal="true"/>
	
		<TextView
	    android:id="@+id/anchor_2"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@+id/anchor_1"
	    android:layout_centerHorizontal="true"/>

</RelativeLayout>
